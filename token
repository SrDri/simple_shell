#include "shell.h"

/**
 * tokenize - tokenizes a buff with a delimiter
 * @buff: buff to tokenize
 * @delimiter: delimiter to tokenize along
 * Return: pointer to an array of pointers to the token
*/

char **tokenize(char *buff, char *delimiter)
{
	char **token = NULL;
	size_t i = 0, counter = 10;

	if (buff == NULL)
		return (NULL);

	token = malloc(sizeof(char *) * counter);

	if (token == NULL)
	{
		perror("Fatal Error");
		return (NULL);
	}

	while ((token[i] = strtok(buff, delimiter)) != NULL)
	{
		i++;
		if (i == counter)
		{
			token = realloc(token, &counter);
			if (token == NULL)
			{
				perror("Fatal Error");
				return (NULL);
			}
		}
		buff = NULL;
	}

	return (token);
}
